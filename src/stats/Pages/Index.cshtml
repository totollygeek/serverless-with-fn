@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Phone Wars!</h1>
    <table class="table">
                <tr>
                    <th>Client type</th>
                    <th>Count</th>
                </tr>
                @foreach (var item in Model.Stats)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Count)
                        </td>
                    </tr>
                }
            </table>
</div>
